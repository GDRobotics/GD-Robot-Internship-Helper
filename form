using Accord.Statistics.Kernels;
using static System.Windows.Forms.VisualStyles.VisualStyleElement.Menu;

namespace WindowsFormsApplication5
{
    public partial class Form1 : Form
    {
        int sayac = 0;
        double[] gd = new double[50];
        static void gdrobotics() { 
            }
        
            public Form1()
        {
            InitializeComponent();
        }

       

        private void textBox1_TextChanged(object sender, EventArgs e)
        {

        }

        private void button1_Click(object sender, EventArgs e)
        {
            string metin = textBox1.Text;

            if (listBox1.Items.Contains(textBox1.Text) == true)
            {
                listBox1.Items.IndexOf(textBox1.Text).ToString();
                 gd[sayac] =Convert.ToDouble(listBox1.Items.IndexOf(textBox1.Text));
                sayac++;
            }
            else { listBox1.Items.Add(metin); }
        }

        private void textBox1_KeyDown(object sender, KeyEventArgs e)
        {
            if (e.KeyCode == Keys.Enter)
            {
                if (listBox1.Items.Contains(textBox1.Text)) { }
                else
                {
                    
                    listBox1.Items.Add(textBox1.Text);
                }
               // enter' a basıldığında buraya girer.
             
                textBox1.Text = "";
            }
            
          }
            
       private void listBox1_SelectedIndexChanged(object sender, EventArgs e)
        {
          
        }

        private void Form1_Load(object sender, EventArgs e)
        {

        }

        private void button2_Click(object sender, EventArgs e)
        {
            string msg = "";
            foreach(double d in gd)
            {
                msg = msg + d + ",";
            }
            MessageBox.Show(msg);
        }
    }
    }

